<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/main"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<ImageView
		android:id="@+id/ivRestaurant"
		android:src="@drawable/restaurant"
		android:layout_width="wrap_content"
		android:layout_height="200dp"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:layout_width="150dp"
		android:layout_height="150dp"
		android:src="@drawable/pasteldechoclo"
		app:layout_constraintTop_toBottomOf="@+id/ivRestaurant"
		android:id="@+id/ivChoclo"
		android:layout_marginStart="20dp"
		android:scaleType="centerCrop"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginTop="20dp" />

	<TextView
		android:text="@string/pastel_choclo"
		android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:textSize="20sp"
		android:textStyle="bold"
		android:id="@+id/tvTitleItem1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/ivChoclo"
		app:layout_constraintHorizontal_bias="0.0"
		android:layout_marginStart="10dp"
		app:layout_constraintTop_toTopOf="@+id/ivChoclo"
		android:layout_marginTop="10dp" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="$"
		android:textSize="15sp"
		android:textStyle="bold"
		android:id="@+id/tvValueItem1"
		app:layout_constraintStart_toEndOf="@+id/ivChoclo"
		app:layout_constraintBottom_toBottomOf="@+id/ivChoclo"
		app:layout_constraintTop_toBottomOf="@+id/etCantidadItem1"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintVertical_bias="1.0"
		app:layout_constraintEnd_toStartOf="@+id/etCantidadItem1"
		android:layout_marginStart="10dp" />

	<EditText
		android:layout_width="50dp"
		android:layout_margin="50dp"
		android:layout_height="wrap_content"
		android:ems="2"
		android:text="1"
		android:inputType="number"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="@+id/ivChoclo"
		app:layout_constraintTop_toBottomOf="@+id/tvTitleItem1"
		android:id="@+id/etCantidadItem1"
		app:layout_constraintStart_toEndOf="@+id/tvItem1"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintVertical_bias="0.7" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/cantidad"
		android:textSize="15sp"
		android:id="@+id/tvItem1"
		app:layout_constraintStart_toEndOf="@+id/ivChoclo"
		app:layout_constraintTop_toBottomOf="@+id/tvTitleItem1"
		android:layout_marginStart="10dp"
		app:layout_constraintBottom_toTopOf="@+id/tvValueItem1"
		app:layout_constraintVertical_bias="0.50" />

<!--	-->

	<ImageView
		android:layout_width="150dp"
		android:layout_height="150dp"
		android:src="@drawable/cazuela"
		android:id="@+id/ivCazuela"
		android:layout_marginStart="20dp"
		android:scaleType="centerCrop"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/ivChoclo"
		android:layout_marginTop="20dp" />

	<TextView
		android:text="@string/cazuela"
		android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:textSize="20sp"
		android:textStyle="bold"
		android:id="@+id/tvTitleItem2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/ivCazuela"
		android:layout_marginStart="10dp"
		app:layout_constraintTop_toTopOf="@+id/ivCazuela"
		app:layout_constraintHorizontal_bias="0.0" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="$"
		android:textSize="15sp"
		android:textStyle="bold"
		android:id="@+id/tvValueItem2"
		app:layout_constraintStart_toEndOf="@+id/ivCazuela"
		app:layout_constraintBottom_toBottomOf="@+id/ivCazuela"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintEnd_toStartOf="@+id/etCantidadItem2"
		android:layout_marginStart="10dp"
		app:layout_constraintTop_toBottomOf="@+id/etCantidadItem2"
		app:layout_constraintVertical_bias="1.0" />

	<EditText
		android:layout_width="50dp"
		android:layout_margin="50dp"
		android:layout_height="wrap_content"
		android:ems="2"
		android:text="1"
		android:inputType="number"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="@+id/ivCazuela"
		app:layout_constraintTop_toBottomOf="@+id/tvTitleItem2"
		android:id="@+id/etCantidadItem2"
		app:layout_constraintStart_toEndOf="@+id/tvItem2"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintVertical_bias="0.7" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/cantidad"
		android:textSize="15sp"
		android:id="@+id/tvItem2"
		app:layout_constraintStart_toEndOf="@+id/ivCazuela"
		android:layout_marginStart="10dp"
		app:layout_constraintTop_toBottomOf="@+id/tvTitleItem2"
		app:layout_constraintBottom_toTopOf="@+id/tvValueItem2" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:padding="10dp"
		android:text="@string/comida"
		android:id="@+id/tvComida"
		app:layout_constraintBottom_toTopOf="@+id/tvPropina"
		app:layout_constraintEnd_toEndOf="@+id/tvPropina" />

	<TextView
		android:id="@+id/tvPropina"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:textStyle="bold"
		android:text="@string/propina"
		app:layout_constraintBottom_toTopOf="@+id/tvTotal"
		app:layout_constraintEnd_toEndOf="@+id/tvTotal" />

	<TextView
		android:id="@+id/tvTotal"
		android:layout_width="wrap_content"
		android:padding="10dp"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:text="@string/total"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/ivCazuela"
		app:layout_constraintVertical_bias="0.8"
		app:layout_constraintHorizontal_bias="0.40" />

	<androidx.appcompat.widget.SwitchCompat
		android:id="@+id/swPropina"
		android:checked="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toStartOf="@+id/tvPropina"
		app:layout_constraintBottom_toBottomOf="@+id/tvPropina"
		app:layout_constraintTop_toTopOf="@+id/tvPropina"
		android:layout_marginEnd="10dp" />

	<TextView
		tools:text="$"
		android:id="@+id/tvComidaValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toEndOf="@+id/tvComida"
		app:layout_constraintTop_toTopOf="@+id/tvComida"
		app:layout_constraintBottom_toBottomOf="@+id/tvComida"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0" />

	<TextView
		tools:text="$"
		android:id="@+id/tvPropinaValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toEndOf="@+id/tvPropina"
		app:layout_constraintBottom_toBottomOf="@+id/tvPropina"
		app:layout_constraintTop_toTopOf="@+id/tvPropina" />

	<TextView
		tools:text="$"
		android:id="@+id/tvTotalValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toEndOf="@+id/tvPropina"
		app:layout_constraintBottom_toBottomOf="@+id/tvTotal"
		app:layout_constraintTop_toTopOf="@+id/tvTotal" />
</androidx.constraintlayout.widget.ConstraintLayout>
